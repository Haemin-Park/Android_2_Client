<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="items"
            type="com.example.sport_planet.data.model.ApplyListModel" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="30dp"
        android:paddingVertical="16dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/profile_34_px" />

        <TextView
            android:id="@+id/tv_host_guest"
            style="@style/bold_basic_14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@{items.host ? @string/item_history_ing_host : @string/item_history_ing_guest}"
            android:layout_marginStart="14dp"
            tools:text="Guest" />

        <TextView
            android:id="@+id/tv_nickname"
            style="@style/bold_basic_14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="8dp"
            android:text="@{items.guestName}"
            tools:text="오동동" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/tv_label"
            style="@style/bold_basic_14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="8dp"
            android:text="@{items.applyStatus.name}"
            android:background="@drawable/shape_round_corner_light_gray"
            android:paddingHorizontal="10dp"
            android:paddingVertical="3dp"
            tools:text="신청중" />
    </LinearLayout>

</layout>