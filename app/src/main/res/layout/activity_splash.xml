<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <ImageView
            android:id="@+id/iv_splash_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.45"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/splash_logo" />

        <TextView
            style="@style/medium_basic_16sp"
            android:id="@+id/tv_splash_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:lineSpacingExtra="9sp"
            android:text="@string/splash_text1"
            android:textColor="@color/blue364ea0"
            app:layout_constraintEnd_toEndOf="@id/iv_splash_image"
            app:layout_constraintStart_toStartOf="@id/iv_splash_image"
            app:layout_constraintTop_toBottomOf="@id/iv_splash_image" />

        <ImageView
            android:id="@+id/iv_splash_main_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:src="@drawable/splash_main_text"
            app:layout_constraintEnd_toEndOf="@id/tv_splash_text1"
            app:layout_constraintStart_toStartOf="@id/tv_splash_text1"
            app:layout_constraintTop_toBottomOf="@id/tv_splash_text1" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>