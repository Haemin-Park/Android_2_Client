<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/item_custom_dialog_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/medium_basic_16sp"
        android:textColor="@color/black121212"
        android:background="@color/white"
        android:padding="24dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/item_custom_dialog_cancle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/custom_dialog_cancle"
            style="@style/medium_basic_16sp"
            android:textColor="@color/gray9c9c9c"
            android:background="@color/grayefefef"/>

        <Button
            android:id="@+id/item_custom_dialog_ok"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="@style/medium_basic_16sp"
            android:textColor="@color/white"
            android:background="@color/blue364ea0"/>
    </LinearLayout>
</LinearLayout>