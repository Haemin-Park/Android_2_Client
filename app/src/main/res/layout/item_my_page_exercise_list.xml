<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="String" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_interest_excise"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/activity_chatting_edit_text_border"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_excise"
            style="@style/regular_basic_14sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/item_exercise_list_margin_12dp"
            android:autoSizeTextType="uniform"
            android:background="@color/white_gray"
            android:gravity="center"
            android:text="@{item}"
            android:textColor="@color/dark_gray"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="축구" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>