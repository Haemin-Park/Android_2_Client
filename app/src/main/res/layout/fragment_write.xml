<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.example.sport_planet.presentation.custom.CustomToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_app_bar_size"
            app:isBackButton="false"
            app:layout_constraintTop_toTopOf="parent"
            app:title="" />

        <EditText
            android:id="@+id/edt_title"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@id/toolbar" />

        <LinearLayout
            android:id="@+id/linear_empty"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="@id/edt_title"
            app:layout_constraintStart_toStartOf="@id/edt_title"
            app:layout_constraintTop_toBottomOf="@id/edt_title" />

        <LinearLayout
            android:id="@+id/linear_member_count"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="@id/edt_title"
            app:layout_constraintStart_toStartOf="@id/edt_title"
            app:layout_constraintTop_toBottomOf="@id/linear_empty">

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_centerHorizontal="true"
                android:spinnerMode="dropdown" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_date"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="@id/edt_title"
            app:layout_constraintStart_toStartOf="@id/edt_title"
            app:layout_constraintTop_toBottomOf="@id/linear_member_count" />

        <LinearLayout
            android:id="@+id/linear_place"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="@id/edt_title"
            app:layout_constraintStart_toStartOf="@id/edt_title"
            app:layout_constraintTop_toBottomOf="@id/linear_date" />

        <EditText
            android:id="@+id/edt_body"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="left|top"
            android:hint="@string/activity_write_body_hint"
            app:layout_constraintBottom_toTopOf="@id/btn_posting"
            app:layout_constraintEnd_toEndOf="@id/edt_title"
            app:layout_constraintStart_toStartOf="@id/edt_title"
            app:layout_constraintTop_toBottomOf="@id/linear_place" />

        <Button
            android:id="@+id/btn_posting"
            style="@style/medium_basic_16sp"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_marginBottom="16dp"
            android:enabled="false"
            android:text="게시글"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/edt_title"
            app:layout_constraintStart_toStartOf="@id/edt_title" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>