<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/fragment_setting_margin_12dp"
            android:layout_marginTop="@dimen/fragment_setting_margin_12dp"
            android:src="@drawable/ic_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            style="@style/bold_basic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/fragment_setting_margin_12dp"
            android:text="설정"
            android:textColor="@color/black"
            android:textSize="@dimen/fragment_setting_text_size_20sp"
            app:layout_constraintBottom_toBottomOf="@id/iv_back_button"
            app:layout_constraintStart_toEndOf="@id/iv_back_button"
            app:layout_constraintTop_toTopOf="@id/iv_back_button" />

        <View
            android:id="@+id/v_line_1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/fragment_setting_margin_20dp"
            android:background="@color/white_gray"
            app:layout_constraintTop_toBottomOf="@id/iv_back_button" />

        <TextView
            android:id="@+id/tv_version"
            style="@style/medium_basic_16sp_black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/fragment_setting_margin_16dp"
            android:text="@string/fragment_setting_version"
            app:layout_constraintTop_toBottomOf="@id/v_line_1" />
        <View
            android:id="@+id/v_line_2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white_gray"
            android:paddingHorizontal="@dimen/fragment_setting_padding_16dp"
            app:layout_constraintTop_toBottomOf="@id/tv_version" />

        <TextView
            android:id="@+id/tv_logout"
            style="@style/medium_basic_16sp_black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/fragment_setting_margin_16dp"
            android:text="@string/fragment_setting_logout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/v_line_2" />
        <View
            android:id="@+id/v_line_3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white_gray"
            android:paddingHorizontal="@dimen/fragment_setting_padding_16dp"
            app:layout_constraintTop_toBottomOf="@id/tv_logout" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>