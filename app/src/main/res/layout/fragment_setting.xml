<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.yapp.sport_planet.presentation.custom.CustomToolbar
            android:id="@+id/custom_tool_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/tv_version"
            style="@style/medium_basic_16sp_black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/fragment_setting_margin_16dp"
            android:text="@string/fragment_setting_version"
            app:layout_constraintTop_toBottomOf="@id/custom_tool_bar" />

        <View
            android:id="@+id/v_line_2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white_gray"
            android:paddingHorizontal="@dimen/fragment_setting_padding_16dp"
            app:layout_constraintTop_toBottomOf="@id/tv_version" />

        <TextView
            android:id="@+id/tv_logout"
            style="@style/medium_basic_16sp_black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/fragment_setting_margin_16dp"
            android:text="로그아웃"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/v_line_2" />

        <View
            android:id="@+id/v_line_3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white_gray"
            android:paddingHorizontal="@dimen/fragment_setting_padding_16dp"
            app:layout_constraintTop_toBottomOf="@id/tv_logout" />

        <TextView
            android:id="@+id/tv_withdrawal"
            style="@style/medium_basic_16sp_black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/fragment_setting_margin_16dp"
            android:text="@string/fragment_setting_logout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/v_line_3" />

        <View
            android:id="@+id/v_line_4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white_gray"
            android:paddingHorizontal="@dimen/fragment_setting_padding_16dp"
            app:layout_constraintTop_toBottomOf="@id/tv_withdrawal" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>